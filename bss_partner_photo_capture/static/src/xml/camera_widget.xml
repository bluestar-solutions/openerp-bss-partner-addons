<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

	<t t-name="FieldBssCamera" t-attf-class="base #{cls}" class="oe_bss_camera">
        <div style="width: 640px; height: 480px;">
            <video id="video" width="640" height="480" autoplay="autoplay"></video>
            <canvas id="canvas" width="640" height="480" style="position: absolute; left: 0; top: 0; z-index: 0;"></canvas>
            <canvas id="zoneCanvas" width="640" height="480" style="position: absolute; left: 0; top: 0; z-index: 1;"></canvas>
            <canvas id="exportCanvas" width="640" height="480" style="display: none;"></canvas>
        </div>
        
        <hr/>
        <button id="snapshot_btn">Snap Photo</button>
        <button id="video_btn">Take Another Photo</button>
        <button id="saveBtn">Save</button>
	</t>
	
</templates>
